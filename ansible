pipeline{
     agent {
	     node{
		  label 'slave'
	 }
 }
	  stages {
		    stage('Ansible started'){
			  steps{
			      sh 'echo "ansible start....!"'
			  }
			}
			stage('change folder'){
			  steps{
			      sh 'cd /home/ec2-user/workspace'
				  sh 'echo "Changing folder....!"'
			  }
			}
			stage('Remove folder'){
			  steps{
			      sh 'cd /home/ec2-user/workspace'
			      sh 'rm -rf *'
				  sh 'echo "Remove folder....!"'
			  }
			}
			stage('Git clone'){
			  steps{
			     sh 'cd /home/ec2-user/workspace/ansible-pipe-line'
			     sh 'git clone https://github.com/ayyappa1/jenkins-pipeline-ansible.git'
		            
			  }
			}
			stage('wait for cloning to be complete'){
			  steps{
			    echo 'Waiting 30 seconds cloning to be complete'
 			    
		            }
			}
		stage('Ansible playbook'){
			  steps{
			      sh 'cd /home/ec2-user/workspace/ansible-pipe-line/jenkins-pipeline-ansible/ && ansible-playbook test.yml -b -vvv'
			     
			  }
			}
	jenkins-pipeline-ansible/
}	
}
